        <Button x:Name="bttnCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" Grid.Row="2" VerticalAlignment="Bottom" Width="75" Click="bttnCancel_Click"/>
        <Button x:Name="bttnRooms" Content="Select Rooms" HorizontalAlignment="Right" Margin="0,0,182,10" Grid.Row="2" VerticalAlignment="Bottom" Width="93" Click="bttnRooms_Click"/>
        <Button x:Name="bttnAreas" Content="Select Areas" HorizontalAlignment="Right" Margin="0,0,90,10" Grid.Row="2" VerticalAlignment="Bottom" Width="87" Click="bttnAreas_Click"/>
        <Label x:Name="labelTest" Content="Lighting Test: " HorizontalAlignment="Left" Margin="19,14,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbBoxTest" HorizontalAlignment="Left" Margin="108,18,0,0" VerticalAlignment="Top" Width="228"/>
        <Label x:Name="labelView" Content="View Name:" HorizontalAlignment="Left" Margin="19,20,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <ComboBox x:Name="cmbBoxView" HorizontalAlignment="Left" Margin="108,24,0,0" VerticalAlignment="Top" Width="228" Grid.Row="1"/>

    </Grid>
</Window>
